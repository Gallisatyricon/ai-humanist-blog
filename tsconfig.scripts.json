{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "outDir": "./dist/scripts"
  },
  "include": ["scripts/**/*", "src/**/*"],
  "exclude": ["node_modules"]
}